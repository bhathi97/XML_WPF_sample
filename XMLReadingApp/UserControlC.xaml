<UserControl x:Class="XMLReadingApp.UserControlC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XMLReadingApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <StackPanel>
                <Label Foreground="White" Content=">>"/>
                <StackPanel Orientation="Horizontal">
                    <Label Foreground="White" Content=" Name :"/>
                    <Label Foreground="White" x:Name="LblName"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Foreground="White" Content=" Quantity :"/>
                    <Label Foreground="White" x:Name="LblQt"/>
                </StackPanel>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
